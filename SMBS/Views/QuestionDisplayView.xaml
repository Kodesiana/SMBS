<Window x:Class="SMBS.Views.QuestionDisplayView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="QuestionDisplayView" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        
        <FlowDocumentReader x:Name="ddd" Grid.Row="0"></FlowDocumentReader>
        <StackPanel Grid.Row="1">
            <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>
        </StackPanel>
    </Grid>
</Window>
